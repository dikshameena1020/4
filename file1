public class CountOccurrences {
    public static int countOccurrences(String str, char ch) {
        int count = 0;
        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ch) {
                count++;
            }
        }
        return count;
    }

    public static void main(String[] args) {
        String word = "hello";
        char ch = 'l';
        System.out.println(countOccurrences(word, ch));
    }
}
